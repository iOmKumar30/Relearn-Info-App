generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "windows", "debian-openssl-3.0.x", "rhel-openssl-3.0.x"]
}

datasource db {
  provider     = "postgresql"
  relationMode = "prisma"
}

model Centre {
  id               String                  @id @default(uuid())
  code             String                  @unique @db.VarChar(12)
  name             String?
  streetAddress    String?                 @map("street_address")
  city             String?
  district         String?
  state            String?
  pincode          String?                 @db.VarChar(10)
  status           CentreStatus            @default(ACTIVE)
  dateAssociated   DateTime                @map("date_associated")
  dateLeft         DateTime?               @map("date_left")
  createdAt        DateTime                @default(now())
  updatedAt        DateTime                @updatedAt
  classrooms       Classroom[]
  facilitatorLinks FacilitatorAssignment[]

  @@index([city, state])
  @@index([status])
}

model CentreCodeCounter {
  state String @id
  seq   Int
}

model Classroom {
  id                String                       @id @default(uuid())
  code              String?                      @unique @db.VarChar(24)
  centreId          String                       @map("centre_id")
  section           SectionCode?                 @map("section_code")
  timing            ClassTiming?
  monthlyAllowance  Int?                         @map("monthly_allowance")
  status            ClassroomStatus              @default(ACTIVE)
  dateCreated       DateTime?                    @map("date_created")
  dateClosed        DateTime?                    @map("date_closed")
  createdAt         DateTime                     @default(now())
  updatedAt         DateTime                     @updatedAt
  city              String?
  district          String?
  pincode           String?                      @db.VarChar(10)
  state             String?
  streetAddress     String?                      @map("street_address")
  centre            Centre                       @relation(fields: [centreId], references: [id], onDelete: Cascade)
  tutorAssignments  TutorAssignment[]
  studentHistory    StudentClassroomAssignment[]
  monthlyAttendance MonthlyClassroomAttendance[]

  @@index([centreId])
  @@index([status, section, timing])
}

model ClassroomCodeCounter {
  key String @id
  seq Int
}

model User {
  id                       String                       @id @default(uuid())
  name                     String?
  email                    String                       @unique
  createdAt                DateTime                     @default(now())
  updatedAt                DateTime                     @updatedAt
  activatedAt              DateTime?
  address                  String?
  onboardingStatus         OnboardingStatus             @default(PENDING_PROFILE)
  gender                   Gender?
  phone                    String?
  profileSubmittedAt       DateTime?
  roleRequestedAt          DateTime?
  status                   UserStatus                   @default(ACTIVE)
  sessionVersion           Int?                         @default(0)
  roleHistory              UserRoleHistory[]
  employee                 Employee?
  member                   Member?
  tutorAssignments         TutorAssignment[]
  facilitatorAssignments   FacilitatorAssignment[]
  attendanceEntered        MonthlyClassroomAttendance[] @relation("AttendanceEnteredBy")
  emailCredential          EmailCredential?
  accounts                 Account[]
  roleRequests             RoleRequest[]
  facilitatorEmployeeLinks FacilitatorEmployee[]        @relation("FacilitatorToEmployee")
  employeeFacilitatorLinks FacilitatorEmployee[]        @relation("EmployeeToFacilitator")

  @@index([status])
  @@index([email])
  @@index([onboardingStatus])
}

model Role {
  id          String            @id @default(uuid())
  name        RoleName          @unique
  description String?
  userHistory UserRoleHistory[]
}

model UserRoleHistory {
  id        String    @id @default(uuid())
  userId    String
  roleId    String
  startDate DateTime  @default(now())
  endDate   DateTime?
  createdAt DateTime  @default(now())
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  role      Role      @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@index([userId, startDate])
  @@index([userId, endDate])
  @@index([roleId])
}

model EmailCredential {
  id           String    @id @default(uuid())
  userId       String    @unique
  email        String    @unique
  passwordHash String
  passwordSalt String?
  lastLoginAt  DateTime?
  failedCount  Int       @default(0)
  lockedUntil  DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([email])
}

model Account {
  id                String   @id @default(uuid())
  userId            String
  provider          String
  providerAccountId String
  providerEmail     String?
  accessToken       String?
  refreshToken      String?
  tokenType         String?
  scope             String?
  expiresAt         Int?
  idToken           String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model RoleRequest {
  id             String    @id @default(uuid())
  userId         String
  requestedRoles String
  message        String?
  status         String    @default("PENDING")
  reviewedBy     String?
  reviewedAt     DateTime?
  createdAt      DateTime  @default(now())
  user           User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, status])
}

model FacilitatorAssignment {
  id        String    @id @default(uuid())
  userId    String
  centreId  String
  startDate DateTime
  endDate   DateTime?
  createdAt DateTime  @default(now())
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  centre    Centre    @relation(fields: [centreId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([centreId, startDate, endDate])
}

model FacilitatorEmployee {
  id             String   @id @default(uuid())
  facilitatorId  String
  employeeUserId String
  startDate      DateTime
  createdAt      DateTime @default(now())
  facilitator    User     @relation("FacilitatorToEmployee", fields: [facilitatorId], references: [id], onDelete: Cascade)
  employee       User     @relation("EmployeeToFacilitator", fields: [employeeUserId], references: [id], onDelete: Cascade)

  @@index([facilitatorId])
  @@index([employeeUserId])
}

model TutorAssignment {
  id           String    @id @default(uuid())
  userId       String
  classroomId  String
  startDate    DateTime
  endDate      DateTime?
  isSubstitute Boolean   @default(false)
  createdAt    DateTime  @default(now())
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  classroom    Classroom @relation(fields: [classroomId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([classroomId, startDate, endDate])
  @@index([isSubstitute])
}

model Employee {
  id          String           @id @default(uuid())
  userId      String           @unique
  designation String
  joiningDate DateTime
  status      EmploymentStatus @default(ACTIVE)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  user        User             @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Member {
  id          String              @id @default(uuid())
  memberId    String?             @unique
  userId      String              @unique // for 1:1 relationship with the user
  memberType  MemberType
  joiningDate DateTime
  leavingDate DateTime?
  status      MemberStatus        @default(ACTIVE)
  feeAmount   Decimal?            @db.Decimal(12, 2)
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt
  pan         String?             @db.VarChar(10)
  user        User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  fees        MemberFee[]
  typeHistory MemberTypeHistory[]

  @@index([status])
  @@index([memberType])
}

model MemberFee {
  id          String   @id @default(uuid())
  memberId    String
  fiscalLabel String
  paidOn      DateTime
  amount      Decimal? @db.Decimal(12, 2)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  member      Member   @relation(fields: [memberId], references: [id], onDelete: Cascade)

  @@unique([memberId, fiscalLabel])
  @@index([fiscalLabel])
}

model MemberTypeHistory {
  id       String @id @default(cuid())
  memberId String
  member   Member @relation(fields: [memberId], references: [id], onDelete: Cascade)

  memberType MemberType // ANNUAL, LIFE, HONORARY

  startDate DateTime  @default(now())
  endDate   DateTime? // NULL means currently active

  changedBy String? // Optional: Store User ID of admin who made change
  createdAt DateTime @default(now())

  @@index([memberId])
}

model Intern {
  id        String   @id @default(cuid())
  memberId  String?  @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // --- Personal Info ---
  name        String
  email       String?
  mobile      String?
  address     String?   @db.Text
  gender      Gender?
  dateOfBirth DateTime?

  educationCompleted String? // e.g. "BCA"
  institution        String? // e.g. "NMIMS, Mumbai"
  ongoingCourse      String? // e.g. "MBA"

  areasOfInterest String? // e.g. "Teaching & Training"
  joiningDate     DateTime? // "From which date you are ready to join"
  completionDate  DateTime? // "Date of your completion of internship"

  preferredHoursPerDay String? // e.g. "4 HOURS" - keeping as String to allow text like "4-5 hours"
  workingMode          WorkingMode? // WoS, WFH, Hybrid

  associatedAfter Boolean? @default(false) // "Would you like to be associated..."
  comments        String?  @db.Text

  status InternStatus? @default(ACTIVE)

  feeAmount     Int? // e.g. 1000
  feePaidDate   DateTime?
  paymentStatus PaymentStatus? @default(PENDING)
}

enum InternStatus {
  ACTIVE
  COMPLETED
  DROPPED
  PENDING_START
}

enum WorkingMode {
  ONSITE // Work on site (WoS)
  REMOTE // Work from home (WFH)
  HYBRID
}

enum PaymentStatus {
  PAID
  PENDING
  WAIVED
}

model Student {
  id            String                       @id @default(uuid())
  name          String
  aadhaarNo     String?                      @unique(map: "student_aadhaar_unique")
  rollNo        String                       @unique
  gender        Gender?
  dob           DateTime?
  streetAddress String?                      @map("street_address")
  city          String?
  district      String?
  state         String?
  pincode       String?                      @db.VarChar(10)
  fatherName    String?
  motherName    String?
  createdAt     DateTime                     @default(now())
  updatedAt     DateTime                     @updatedAt
  assignments   StudentClassroomAssignment[]

  @@index([city, state])
}

model StudentClassroomAssignment {
  id          String           @id @default(uuid())
  studentId   String
  classroomId String
  joinDate    DateTime         @map("join_date")
  leaveDate   DateTime?        @map("leave_date")
  status      AssignmentStatus @default(ACTIVE)
  createdAt   DateTime         @default(now())
  student     Student          @relation(fields: [studentId], references: [id], onDelete: Cascade)
  classroom   Classroom        @relation(fields: [classroomId], references: [id], onDelete: Cascade)

  @@index([studentId, status])
  @@index([classroomId, joinDate, leaveDate])
}

model MonthlyClassroomAttendance {
  id                    String    @id @default(uuid())
  classroomId           String
  year                  Int
  month                 Int
  totalStudentsEnrolled Int
  openDays              Int
  totalPresent          Int
  attendancePercentage  Decimal   @db.Decimal(5, 2)
  registerPhotoUrl      String?   @map("register_photo_url")
  remarks               String?
  enteredByTutorId      String
  submittedAt           DateTime  @default(now())
  lastUpdatedAt         DateTime  @updatedAt
  classroom             Classroom @relation(fields: [classroomId], references: [id], onDelete: Cascade)
  enteredBy             User      @relation("AttendanceEnteredBy", fields: [enteredByTutorId], references: [id], onDelete: Restrict)

  @@unique([classroomId, year, month])
  @@index([enteredByTutorId])
  @@index([year, month])
}

model Donation {
  id            String   @id @default(cuid())
  pan           String
  name          String
  address       String
  email         String
  contact       String
  reason        String
  method        String
  amount        Decimal  @db.Decimal(12, 2)
  date          DateTime
  receiptNumber String   @unique
  transactionId String   @unique

  @@index([date])
  @@index([email])
  @@map("donation")
}

model Counter {
  financialYear String @id
  seq           Int

  @@map("counter")
}

model KPI {
  id          String            @id @default(cuid())
  key         String            @unique
  label       String
  unit        KPIUnit
  description String?
  active      Boolean           @default(true)
  category    String?
  sortOrder   Int               @default(0)
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  values      KPIMonthlyValue[]
  targets     KPIFiscalTarget[]
}

model KPIMonthlyValue {
  id        String         @id @default(cuid())
  kpiId     String
  month     DateTime
  value     Float
  source    KPIValueSource
  notes     String?
  userId    String?
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  kpi       KPI            @relation(fields: [kpiId], references: [id], onDelete: Cascade)

  @@unique([kpiId, month, source])
}

model KPIFiscalTarget {
  id          String   @id @default(cuid())
  kpiId       String
  fiscalLabel String
  startDate   DateTime
  endDate     DateTime
  targetValue Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  kpi         KPI      @relation(fields: [kpiId], references: [id], onDelete: Cascade)

  @@unique([kpiId, fiscalLabel])
}

model MembershipCertificate {
  id            String   @id @default(cuid())
  name          String
  year          String
  dateIssued    DateTime
  certificateNo String   @unique
  createdById   String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([name])
  @@index([year])
  @@index([dateIssued])
}

enum CertificateType {
  PARTICIPATION
  INTERNSHIP
  TRAINING
}

model ParticipationCertificate {
  id            String          @id @default(cuid())
  type          CertificateType @default(PARTICIPATION)
  certificateNo String?         @unique
  name          String
  aadhaar       String?
  classYear     String? // e.g. "B.Tech 3rd Year" / "Class 12"
  institute     String // e.g. "IIT Bhubaneswar"
  eventName     String?
  duration      String // e.g. "2 weeks", "100 hours"
  startDate     DateTime
  endDate       DateTime

  issueDate DateTime @default(now())

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([name])
  @@index([aadhaar])
}

model Project {
  id          String        @id @default(uuid())
  title       String
  description String?       @db.Text
  status      ProjectStatus @default(ONGOING)

  // Specific Details
  conclusion    String?  @db.Text
  nextSteps     String?  @db.Text
  mentors       String? // "Mr. A, Mr. B, .. etc"
  sponsoredBy   String?
  year          String? // "2024-26"
  funds         Decimal? @db.Decimal(10, 2) // In Lakhs
  place         String?
  targetGroup   String?
  beneficiaries String? // working peeps

  // File Storage
  reportUrl      String? // URL to the PDF on UploadThing
  proposalUrl    String? // For "Project proposal document"
  approvalUrl    String? // For "Project approval document"
  utilizationUrl String? // For "Utilization Certification"
  rating         Int?    @default(0) // Star rating out of 5

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status])
  @@index([year])
}

model GstReceipt {
  id            String   @id @default(uuid())
  invoiceNo     String   @unique // e.g., RELF/25-26/001
  invoiceDate   DateTime
  dateOfSupply  String?
  placeOfSupply String?
  reverseCharge String?  @default("N")

  // Bill To Details
  billToName  String
  billToGstin String? @default("NA")
  billToState String  @default("Jharkhand")
  billToCode  String? @default("20")

  // Ship To Details
  shipToName  String?
  shipToGstin String? @default("NA")
  shipToState String? @default("Jharkhand")
  shipToCode  String? @default("20")

  // Items stored as JSONB
  // Structure: [{ description, sac, amount, discount, taxableValue, cgstRate, sgstRate, igstRate }]
  items Json?

  // Totals
  totalAmount   Float
  totalTax      Float
  grandTotal    Float
  amountInWords String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model InvoiceCounter {
  id            String @id @default(uuid())
  financialYear String @unique // e.g. "25-26"
  currentSeq    Int    @default(0)
}

enum CentreStatus {
  ACTIVE
  INACTIVE
}

enum ClassroomStatus {
  ACTIVE
  INACTIVE
}

enum SectionCode {
  JR
  SR
  BOTH
}

enum ClassTiming {
  MORNING
  EVENING
}

enum UserStatus {
  ACTIVE
  INACTIVE
}

enum EmploymentStatus {
  ACTIVE
  INACTIVE
}

enum AssignmentStatus {
  ACTIVE
  LEFT
}


enum Gender {
  M
  F
  O
}

enum RoleName {
  PENDING
  ADMIN
  TUTOR
  FACILITATOR
  RELF_EMPLOYEE
  TUTOR_OF_TUTOR
  MEMBER
}

enum OnboardingStatus {
  PENDING_PROFILE
  SUBMITTED_PROFILE
  PENDING_ROLE
  ACTIVE
  REJECTED
}

enum MemberType {
  ANNUAL
  INTERN
  HONORARY
  LIFE
  FOUNDER
}

enum MemberStatus {
  ACTIVE
  INACTIVE
}

enum KPIValueSource {
  MANUAL
  AUTO
}

enum KPIUnit {
  COUNT
  PERCENT
  LAKHS
}

enum ProjectStatus {
  PLANNED
  ONGOING
  COMPLETED
  ON_HOLD
}

model GlobalSequence {
  id      String @id @default("member_seq") // Single row ID
  current Int    @default(0)
}

model FinancialYear {
  id        String   @id @default(cuid())
  name      String   @unique // e.g., "FY 2025-26"
  startDate DateTime // e.g., 2025-04-01
  endDate   DateTime // e.g., 2026-03-31
  isActive  Boolean  @default(true)

  // Relations
  months MonthlyStatement[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model MonthlyStatement {
  id String @id @default(cuid())

  month Int
  year  Int

  dataPopulatedDate DateTime? @default(now())
  startDate         DateTime? // Start of month
  endDate           DateTime? // End of month

  startBalance Decimal? @db.Decimal(15, 2)
  endBalance   Decimal? @db.Decimal(15, 2)

  statementFileUrl String?

  financialYearId String
  financialYear   FinancialYear @relation(fields: [financialYearId], references: [id])

  transactions Transaction[]

  createdById String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([month, year])
  @@index([financialYearId])
}

model Transaction {
  id String @id @default(cuid())

  txnDate     DateTime?
  valueDate   DateTime?
  description String?   @db.Text
  txnId       String?
  refNo       String?
  branchCode  String?

  // Financials
  type           TransactionType
  amount         Decimal?        @db.Decimal(15, 2)
  runningBalance Decimal?        @db.Decimal(15, 2)

  partyName String?
  reason    String?

  statementId String
  statement   MonthlyStatement @relation(fields: [statementId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([statementId])
  @@index([txnDate])
}

enum TransactionType {
  DEBIT
  CREDIT
}
